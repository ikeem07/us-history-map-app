{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",               // ✅ for modern JavaScript features
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",                 // ✅ for Vite bundler
    "moduleResolution": "bundler",     // ✅ allows extensionless imports like './App'
    "jsx": "react-jsx",                // ✅ required for React 17+
    "lib": ["DOM", "ES2022"]           // ✅ enables DOM & modern JS APIs
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
